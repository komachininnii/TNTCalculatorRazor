@page
@model IndexModel
@using TNTCalculatorRazor.Domain.Enums

<h2>栄養計算</h2>

<style>
    :root {
        --gap: 12px;
        --card: 14px;
    }

    .layout {
        display: grid;
        grid-template-columns: 1.05fr 0.95fr;
        gap: 16px;
        align-items: start;
    }

    @@media (max-width: 980px) {
        .layout {
            grid-template-columns: 1fr;
        }
    }

    .field {
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 10px;
        align-items: center;
    }

    @@media (max-width: 520px) {
        .field {
            grid-template-columns: 1fr;
        }

        .two-col {
            grid-template-columns: 1fr;
        }
    }




    .label { font-weight: 600; }
    .control { display: flex; align-items: center; gap: 8px; flex-wrap: wrap; }
    .control input, .control select {
      padding: 6px 8px;
      min-height: 34px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }
    .unit { color:#444; }

    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }
    @@media (max-width: 520px) {
      .two-col { grid-template-columns: 1fr; }
    }

    .kv {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 8px 12px;
      align-items: baseline;
      margin: 0;
    }
    .kv dt { color:#333; }
    .kv dd { margin: 0; font-weight: 600; }

    .pill {
      display:inline-block;
      padding: 2px 8px;
      border: 1px solid #ddd;
      border-radius: 999px;
      font-size: 0.85em;
      color:#333;
      background:#fafafa;
    }

    /* 右カラムを少し見やすく */
    .summary {
      position: sticky;
      top: 12px;
    }
    @@media (max-width: 980px) {
      .summary { position: static; }
    }

    details > summary { cursor: pointer; }
    details summary { font-weight: 600; }

    /* 補助説明：カード風 */
    .hr {
        border-top: 1px solid #eee;
        margin: 12px 0;
    }

    .small {
        font-size: 0.92em;
    }

    .muted {
        color: #666;
    }

    .field.sub {
        padding: 8px 10px;
        border-radius: 10px;
        background: #f7f7f7;
        border: 1px solid #e7e7e7;
    }

    /* 肝性脳症チェック表示用 */
    .field.sub .label {
        position: relative;
        padding-left: 10px;
    }
    .field.sub .label::before {
        content: "";
        position: absolute;
        left: 0;
        top: 2px;
        bottom: 2px;
        width: 3px;
        border-radius: 2px;
        background: #d6d6d6;
    }

</style>

<form method="post">
    <input type="hidden" id="Action" name="Action" value="" />
    <input asp-for="IsProteinCorrectionUserEdited" type="hidden" />
   
    <div class="layout">

        <!-- ========================= -->
        <!-- 左：入力 -->
        <!-- ========================= -->
        <div>

            <div class="card">
                <h3>基本入力</h3>
                <div class="fields">

                    <div class="field">
                        <div class="label">年齢</div>
                        <div class="control">
                            <input asp-for="Age" type="number" step="1" inputmode="numeric"
                                   onkeydown="submitOnEnter(event,'anthro')" />
                            <span class="unit">歳</span>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">身長</div>
                        <div class="control">
                            <input asp-for="Height" type="number" step="0.1" inputmode="decimal"
                                   onkeydown="submitOnEnter(event,'anthro')" />
                            <span class="unit">cm</span>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">体重</div>
                        <div class="control">
                            <input asp-for="Weight" type="number" step="0.1" inputmode="decimal"
                                   onkeydown="submitOnEnter(event,'anthro')" />
                            <span class="unit">kg</span>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">性別</div>
                        <div class="control">
                            <select asp-for="Gender"
                                    asp-items="Html.GetEnumSelectList<GenderType>()"
                                    onchange="document.getElementById('Action').value='anthro'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card">
                <h3>疾患</h3>
                <div class="fields">
                    <div class="field">
                        <div class="label">疾患</div>
                        <div class="control">
                            <select asp-for="SelectedDisease"
                                    asp-items="Html.GetEnumSelectList<DiseaseType>()"
                                    onchange="document.getElementById('Action').value='disease'; this.form.submit();"
                                    disabled="@(Model.Age.HasValue && Model.Age.Value < 18)">
                            </select>
                            @if (Model.Age.HasValue && Model.Age.Value < 18)
                            {
                                <div class="muted small">※ 小児は院内マニュアル上、疾患別デフォルトの対象外（疾患は「なし」に固定）</div>
                            }
                            <span class="muted small">※ 疾患によりデフォルトや計算式が変わる場合があります</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <h3>係数・補正</h3>
                <div class="fields">

                    <div class="field">
                        <div class="label">活動係数</div>
                        <div class="control">
                            <select asp-for="ActivityFactor"
                                    asp-items="Html.GetEnumSelectList<ActivityFactorType>()"
                                    onchange="document.getElementById('Action').value='factors'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">ストレス係数</div>
                        <div class="control">
                            <select asp-for="StressFactor"
                                    asp-items="Html.GetEnumSelectList<StressFactorType>()"
                                    onchange="document.getElementById('Action').value='factors'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">体温補正</div>
                        <div class="control">
                            <select asp-for="SelectedBodyTemperature"
                                    asp-items="Html.GetEnumSelectList<BodyTemperatureLevel>()"
                                    onchange="document.getElementById('Action').value='factors'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                    @if (Model.SelectedDisease == DiseaseType.LiverCirrhosis)
                    {
                        <div class="field sub">
                            <div class="label">肝性脳症</div>
                            <div class="control">
                                <label style="display:flex;gap:8px;align-items:center;">
                                    <input asp-for="IsHepaticEncephalopathy"
                                           type="checkbox"
                                           onchange="document.getElementById('Action').value='hepatic'; this.form.submit();" />
                                    あり（蛋白不耐）
                                </label>
                                <span class="muted small">※ ONで蛋白補正 0.5 + 肝不全用アミノ酸製剤を検討</span>
                            </div>
                        </div>
                    }

                    <div class="field">
                        <div class="label">蛋白補正</div>
                        <div class="control">
                            <select asp-for="SelectedProteinCorrection"
                                    asp-items="Html.GetEnumSelectList<ProteinCorrectionType>()"
                                    onchange="document.getElementById('Action').value='protein'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card">
                <h3>投与カロリー</h3>

                <div class="fields">
                    <div class="field">
                        <div class="label">算出方法</div>
                        <div class="control">
                            <select asp-for="SelectedEnergyOrder"
                                    asp-items="Html.GetEnumSelectList<EnergyOrderType>()"
                                    onchange="document.getElementById('Action').value='order'; this.form.submit();">
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">投与カロリー</div>
                        <div class="control">
                            <input asp-for="EnergyOrderValue"
                                   type="number" step="1" inputmode="numeric"
                                   onchange="document.getElementById('Action').value='energy'; this.form.submit();" />
                            <span class="unit">kcal/day</span>
                            @if (Model.IsEnergyUserEdited)
                            {
                                <span class="pill">手動編集</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="hr"></div>

                <details>
                    <summary>エネルギー候補（参考）</summary>
                    <div class="small" style="margin-top:10px;">
                        <dl class="kv">
                            <dt>BMR</dt>
                            <dd>@(Model.BmrKcal?.ToString() ?? "-") kcal</dd>
                            <dt>25 kcal/kg</dt>
                            <dd>@(Model.Kcal25?.ToString() ?? "-") kcal</dd>
                            <dt>30 kcal/kg</dt>
                            <dd>@(Model.Kcal30?.ToString() ?? "-") kcal</dd>
                            <dt>35 kcal/kg</dt>
                            <dd>@(Model.Kcal35?.ToString() ?? "-") kcal</dd>
                        </dl>
                    </div>
                </details>
            </div>

        </div>

        <!-- ========================= -->
        <!-- 右：結果 + 経腸 -->
        <!-- ========================= -->
        <div class="summary">

            <div class="card">
                <h3>結果（参考）</h3>

                <div class="two-col">
                    <div>
                        <h4>基本計算</h4>
                        <dl class="kv">
                            <dt>BMI</dt>
                            <dd>@(Model.BodyIndex != null ? Model.BodyIndex.Bmi.ToString("F1") : "-")</dd>

                            <dt>標準体重</dt>
                            <dd>@(Model.BodyIndex?.StandardWeight.ToString("F1") ?? "-") kg</dd>

                            <dt>肥満度</dt>
                            <dd>@(Model.BodyIndex?.ObesityDegree?.ToString("F0") ?? "-") %</dd>

                            <dt>体表面積</dt>
                            <dd>@(Model.BodySurfaceArea?.ToString("F3") ?? "-") m²</dd>
                        </dl>
                    </div>

                    <div>
                        <h4>必要量</h4>
                        <dl class="kv">
                            <dt>ストレス合計</dt>
                            <dd>@Model.StressTotal <span class="muted small">(基礎 @Model.StressBase / 体温 @Model.StressTemperature)</span></dd>

                            <dt>必要エネルギー</dt>
                            <dd>@(Model.EnergyFinal?.ToString() ?? "-") kcal/day</dd>

                            <dt>蛋白</dt>
                            <dd>@(Model.ProteinRaw?.ToString("F2") ?? "-") g/day <span class="muted small">(表示 @Model.ProteinDisplayText)</span></dd>

                            <dt>水分</dt>
                            <dd>
                                @(Model.WaterDisplay?.ToString() ?? "-") mL/day
                                @if (Model.WaterFeverCorrected)
                                {
                                    <span class="pill">発熱補正</span>
                                }
                            </dd>
                        </dl>
                        @if (Model.SelectedDisease == DiseaseType.LiverCirrhosis && Model.IsHepaticEncephalopathy)
                        {
                            <div class="muted small">※ 肝性脳症あり：肝不全用アミノ酸製剤の併用を検討</div>
                        }
                    </div>
                </div>

                <div class="hr"></div>
                
                <details>
                    <summary>補足（考え方・注意点）</summary>
                    <div class="small" style="margin-top:10px;">
                        <ul style="margin:0; padding-left:18px;">
                            <li class="muted">ここに補足説明を追記できます（疾患別の注意、係数の意味、計算式の採用ルールなど）。</li>
                            @* 肝硬変 + 肝性脳症 *@
                            @if (Model.SelectedDisease == DiseaseType.LiverCirrhosis && Model.IsHepaticEncephalopathy)
                            {
                                <li>肝性脳症（蛋白不耐）あり：蛋白補正は 0.5 を適用。肝不全用アミノ酸製剤の併用を検討。</li>
                            }
                            @* 小児 *@
                            @if (Model.Age.HasValue && Model.Age.Value < 18)
                            {
                                <li>小児：疾患は院内マニュアル上の例外対象外として「なし」に固定。蛋白補正は必要に応じて手動調整してください。</li>
                            }
                            <li class="muted">項目が増える場合は「見出し＋箇条書き」で増やすと見やすいです。</li>
                            <li class="muted">（ここに追記）</li>
                        </ul>
                    </div>
                 </details>
            </div>

            <div class="card">
                <h3>経腸栄養</h3>

                @if (Model.SelectedDisease == DiseaseType.LiverCirrhosis && Model.IsHepaticEncephalopathy)
                {
                    <div style="margin: 8px 0 12px 0; padding: 10px; border: 1px solid #e5c07b; border-radius: 8px; background: #fff8e6;">
                        <strong>注意：</strong> 肝性脳症（蛋白不耐）ありの場合、<strong>肝不全用アミノ酸製剤の併用</strong>を検討してください。
                        <div class="muted small" style="margin-top:6px;">
                                    ※ 本ツールの蛋白補正は 0.5 を適用しています（必要に応じて手動で調整してください）。
                        </div>
                    </div>
                }

                <div class="fields">

                    <div class="field">
                        <div class="label">経腸栄養剤</div>
                        <div class="control">
                            <select asp-for="SelectedEnteralFormula"
                                    asp-items="Html.GetEnumSelectList<EnteralFormulaType>()"
                                    onchange="document.getElementById('Action').value='formula'; this.form.submit();">
                                <option value="">-- 選択してください --</option>
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="label">投与量</div>
                        <div class="control">
                            <input asp-for="EnteralVolumeInput"
                                   type="number" step="1" inputmode="numeric"
                                   onchange="document.getElementById('Action').value='volume'; this.form.submit();" />
                            <span class="unit">mL/day</span>
                            <span class="muted small">※ 手入力可（kcalと相互同期）</span>
                        </div>
                    </div>

                </div>

                @if (Model.EnteralVolume.HasValue)
                {
                    <div class="hr"></div>

                    <div class="two-col">
                        <div>
                            <h4>計算結果</h4>
                            <dl class="kv">
                                <dt>投与量</dt>
                                <dd><strong>@Model.EnteralVolume.Value.ToString("F0")</strong> mL/day</dd>
                                <dt>投与カロリー</dt>
                                <dd><strong>@(Model.EnteralEnergy?.ToString("F0") ?? "-")</strong> kcal/day</dd>
                            </dl>

                            <div class="hr"></div>

                            <h4>割付候補（目安：上位）</h4>
                            <ul class="small">
                                @foreach (var plan in Model.EnteralPackagePlans)
                                {
                                    <li>@IndexModel.FormatPlan(plan)</li>
                                }
                            </ul>
                        </div>

                        <div>
                            <h4>成分（投与量ベース）</h4>
                            <dl class="kv">
                                <dt>蛋白質</dt>
                                <dd>@(Model.EnteralProtein?.ToString("F1") ?? "-") g</dd>
                                <dt>脂質</dt>
                                <dd>@(Model.EnteralFat?.ToString("F1") ?? "-") g</dd>
                                <dt>糖質</dt>
                                <dd>@(Model.EnteralCarb?.ToString("F1") ?? "-") g</dd>
                                <dt>食塩</dt>
                                <dd>@(Model.EnteralSalt?.ToString("F2") ?? "-") g</dd>
                                <dt>ビタミンK</dt>
                                <dd>@(Model.EnteralVitaminK?.ToString("F1") ?? "-") µg</dd>
                                <dt>水分量</dt>
                                <dd>@(Model.EnteralWater?.ToString("F0") ?? "-") mL</dd>
                            </dl>
                        </div>
                    </div>
                }
            </div>

            <div class="card">
                <details>
                    <summary>デバッグ（開発中）</summary>
                    <pre class="small" style="white-space:pre-wrap;margin-top:10px;">
Action               : @Model.Action
Age/Height/Weight     : @Model.Age / @Model.Height / @Model.Weight
Gender                : @Model.Gender
Disease               : @Model.SelectedDisease
EnergyOrderType       : @Model.SelectedEnergyOrder
EnergyOrderValue      : @Model.EnergyOrderValue
IsEnergyUserEdited    : @Model.IsEnergyUserEdited
Formula               : @Model.SelectedEnteralFormula
EnteralVolumeInput    : @Model.EnteralVolumeInput
EnteralVolume         : @Model.EnteralVolume
EnteralEnergy         : @Model.EnteralEnergy
          </pre>
                </details>
            </div>

        </div>
    </div>

    <!-- EnterでSubmit -->
    <script>
        function submitOnEnter(e, action) {
          if (e.key === "Enter") {
            e.preventDefault();
            document.getElementById("Action").value = action;
            e.target.form.submit();
          }
        }
    </script>
</form>
