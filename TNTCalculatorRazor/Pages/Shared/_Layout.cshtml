@using System.Reflection
@{
    var asm = Assembly.GetExecutingAssembly();
    var info = asm.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
    var appVersion = string.IsNullOrWhiteSpace(info) ? "" : info.Split('+')[0];
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TNTCalculatorRazor</title>

    <!-- Icons (PWAはしない／ショートカット表示のため) -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/apple-touch-icon-180x180.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="~/android-chrome-192x192.png" />

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TNTCalculatorRazor.styles.css" asp-append-version="true" />
    <!-- <script src="~/js/site.js" asp-append-version="true"></script> ★二重読み込みのため削除 -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 appbar-header">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TNTCalculatorRazor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @using Microsoft.Extensions.Options
    @using TNTCalculatorRazor.Domain.Models
    @inject IOptions<InternalManualOptions> ManualOptions

    <footer class="appbar appbar-footer text-muted" aria-label="App footer">
        <div class="container brand">
            <img src="~/img/TNTCalculatorSmall.png"
                 class="brand-icon"
                 alt="app icon"
                 asp-append-version="true" />

            @*<span class="brand-meta-inline">TNTCalculator Ver. @appVersion by tyama</span>*@
            <span class="brand-meta-inline">
                <span class="brand-name">TNTCalculator</span>
                <span class="brand-ver">Ver. @appVersion</span>
                <span class="brand-by">by tyama</span>
            </span>

            <a class="brand-link"
               href="/Help"
               data-help-window>
                公式一覧
            </a>

            @{
                var m = ManualOptions.Value;
                var showInternal = m.Enabled && !string.IsNullOrWhiteSpace(m.Url);
            }
            @if (showInternal)
            {
                <a class="brand-link"
                   href="@m.Url"
                   target="_blank"
                   rel="noopener">
                    院内マニュアル(EN-map)
                </a>
            }

            <span class="footer-spacer"></span>

            @*<span>&copy; 2025 - TNTCalculatorRazor - <a asp-area="" asp-page="/Privacy">Privacy</a></span>*@
            <span class="footer-spacer"></span>
            <a class="footer-privacy" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
