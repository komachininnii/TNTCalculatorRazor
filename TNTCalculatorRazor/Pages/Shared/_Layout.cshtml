@using System.Reflection
@{
    var asm = Assembly.GetExecutingAssembly();
    var info = asm.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
    var appVersion = string.IsNullOrWhiteSpace(info) ? "" : info.Split('+')[0];
}
@{
    var isPrivacyPage = Context.Request.Path.StartsWithSegments("/Privacy");
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TNTCalculatorRazor</title>

    <!-- Icons (PWAはしない／ショートカット表示のため) -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/apple-touch-icon-180x180.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="~/android-chrome-192x192.png" />

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TNTCalculatorRazor.styles.css" asp-append-version="true" />
</head>
<body>
    @if (!isPrivacyPage)
    {
        <header>
            <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3 appbar-header">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">TNTCalculatorRazor</a>
                </div>
            </nav>
        </header>

    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @using Microsoft.Extensions.Options
    @using TNTCalculatorRazor.Domain.Models
    @inject IOptions<InternalManualOptions> ManualOptions

    @if (!isPrivacyPage)
    {
    <footer class="appbar appbar-footer text-muted" aria-label="App footer">
        <div class="container brand">
            <img src="~/img/TNTCalculatorSmall.png"
                 class="brand-icon"
                 alt="app icon"
                 asp-append-version="true" />
                <span class="brand-meta-inline">
                <span class="brand-name">TNTCalculator</span>
                <span class="brand-ver">Ver. @appVersion</span>
                <span class="brand-by">by tyama</span>
            </span>

                @* NOTE: href="/Help" だと仮想ディレクトリ配下のIISで 404 になり得るため asp-page を使う *@
                <a class="brand-link"
                   asp-area=""
                   asp-page="/Help"
                   data-help-window>
                    公式一覧
                </a>


            @{
                var m = ManualOptions.Value;
                var showInternal = m.Enabled && !string.IsNullOrWhiteSpace(m.Url);
            }
            @if (showInternal)
            {
                <a class="brand-link"
                   href="@m.Url"
                   target="_blank"
                   rel="noopener">
                    院内マニュアル(EN-map)
                </a>
            }

            <span class="footer-spacer"></span>
                <a class="footer-privacy"
                   asp-area=""
                   asp-page="/Privacy"
                   data-privacy-window>Privacy</a>

        </div>
    </footer>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
