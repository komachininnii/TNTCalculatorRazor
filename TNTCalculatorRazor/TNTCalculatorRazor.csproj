    <Compile Remove="Domain\Enums\ProteinCondition.cs" />
    <Compile Remove="Domain\Models\EnteralDoseResult.cs" />
    <Compile Remove="Domain\Models\EnteralFeedingResult.cs" />
    <Compile Remove="Domain\Models\EnteralFormulaDefinition.cs" />
    <Compile Remove="Domain\Services\EnteralDoseCalculator.cs" />
    <Compile Remove="Domain\Tables\DiseaseEnergyDefaultTable.cs" />
    <Compile Remove="Domain\Tables\DiseaseEnergyLevelTable.cs" />
    <Compile Remove="Domain\Tables\EnergyKcalPerKgTable.cs" />
    <Compile Remove="Domain\Tables\EnergyOrderValueTable.cs" />
    <Compile Remove="Domain\Tables\ProteinCorrectionTable.cs" />
    <Compile Remove="Domain\Tables\ProteinFactorTable.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\help\TNTCalculatorHelp.html" />
  </ItemGroup>

  <!-- Prevent accidental publishing of internal-only settings -->
  <ItemGroup>
    <Content Update="appsettings.Production.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

</Project>
