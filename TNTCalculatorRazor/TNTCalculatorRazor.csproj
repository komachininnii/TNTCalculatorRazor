    <Version>3.0.0-beta.6</Version>
    <AssemblyInformationalVersion>3.0.0</AssemblyInformationalVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Domain\Calculators\BodyCompositionCalculator.cs" />
    <Compile Remove="Domain\Calculators\EnergyRequirementCalculator.cs" />
    <Compile Remove="Domain\Calculators\EnteralFeedingCalculator.cs" />
    <Compile Remove="Domain\Calculators\EnteralPackageRounder.cs" />
